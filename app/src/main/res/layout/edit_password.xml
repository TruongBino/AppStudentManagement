<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_arrow_back_24"></ImageButton>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/man"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/tv_role"
            android:layout_marginBottom="20dp"
            android:text="Thay đổi mật khẩu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Mật khẩu cũ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:gravity="center"
            android:id="@+id/edt_Password"
            android:text="Password"
            android:layout_width="300dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:drawableRight="@drawable/baseline_password_24"
            android:paddingEnd="15dp"></EditText>
        <TextView
            android:layout_marginTop="20dp"
            android:text="Mật khẩu mới"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:gravity="center"
            android:id="@+id/edt_PasswordNew1"
            android:text="Password"
            android:layout_width="300dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            android:paddingEnd="15dp"></EditText>
        <TextView
            android:layout_marginTop="20dp"
            android:text="Nhập lại mật khẩu mới"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:gravity="center"
            android:id="@+id/edt_PasswordNew2"
            android:text="Password"
            android:layout_width="300dp"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:background="@drawable/input"
            android:drawableRight="@drawable/baseline_remove_red_eye_24"
            android:paddingEnd="15dp"></EditText>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_UpdatePasswordNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhật mật khẩu mới"></Button>
    </LinearLayout>
</LinearLayout>
