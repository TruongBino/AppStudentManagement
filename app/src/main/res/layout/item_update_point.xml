<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Cập nhật điểm"
        android:textStyle="bold"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/back_button_description"
            android:onClick="onBackButtonClick" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:id="@+id/img_student_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/students_icon"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mã HS: "></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="File điểm chi tiết"></TextView>
    <ImageButton
        android:id="@+id/img_FileDetailScore"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_file_present_24"></ImageButton>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hạnh kiểm:"/>
        <EditText
            android:text="0"
            android:layout_marginRight="10dp"
            android:id="@+id/edt_Conduct"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/inputpro"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DTB:"/>
        <EditText
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:id="@+id/edt_ScoreGPA"
            android:layout_width="50dp"
            android:text="0"
            android:layout_height="wrap_content"
            android:background="@drawable/inputpro"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="học lực:"/>
        <EditText
            android:gravity="center"
            android:id="@+id/edt_ScoreAcademicAbility"
            android:layout_width="70dp"
            android:text="0"
            android:layout_height="wrap_content"
            android:background="@drawable/inputpro"/>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_UpdatePoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Point"></Button>
</LinearLayout>