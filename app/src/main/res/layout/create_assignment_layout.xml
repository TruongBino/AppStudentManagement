<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/btn_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="@string/back_button_description"
        android:onClick="onBackButtonClick" />
    <ImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/examadd"
        android:layout_marginBottom="10dp"></ImageView>
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên môn học :"></TextView>

    <EditText
        android:id="@+id/subjectEditText"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tên Môn học" />
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung bài tập :"></TextView>

    <EditText
        android:padding="20dp"
        android:id="@+id/contentEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nội dung bài tập"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng tải tệp tin :"></TextView>
    <ImageButton
        android:id="@+id/attachFileButton"
        android:layout_marginBottom="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/baseline_file_upload_24"></ImageButton>


    <Button
        android:layout_gravity="center"
        android:id="@+id/createAssignmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo bài tập" />

</LinearLayout>
